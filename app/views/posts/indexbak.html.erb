<h1>Listing articles</h1>
<%= link_to 'New article', new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', post_path(article) %></td>
      <td><%= link_to 'Edit', edit_post_path(article) %></td>
      <td><%= link_to 'Destroy', post_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
