<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p><%= button_to 'Convert',srj_convert_post_url(@post),method: 'get', remote: true %></p>
<p,id="show-text">
    <%= @post.text %>
</p>

<h2>Comments</h2>
<%= render @post.comments%>

<h2>Add a comment:</h2>
<%= render 'comments/form'%>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
