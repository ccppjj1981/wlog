<div class="container">
  <div class="row">
    <div class="col-sm-offset-2 col-sm-10">
      <h2>用户登录</h2>
    </div>
  <div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
     html: { class: 'form-horizontal' }) do |f| %>
    <div class="form-group">
       <!--<%= f.input :email, required: false, class: "col-sm-2 control-label",autofocus: true %>-->
      <label for="user_email" class="col-sm-2 control-label">用户名</label>
       <div class="col-sm-10">
         <input type="text" class="form-control" id="user_email" placeholder="admin@gmail.com" value name="user[email]" >
       </div>
    </div>
    <div class="form-group">
      <!--<%= f.input :password, required: false %>-->
      <label for="user_password" class="col-sm-2 control-label">密码</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="user[password]" id="user_password" placeholder="密码">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-group">
      <!--<%= f.button :submit, "Log in" %>-->
      <!--<input type="submit" class="button" name="commit" value="Log in" data-disable-with="Log in">-->
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary" name="commit" value="Log in" data-disable-with="Log in">登录</button>
      </div>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
